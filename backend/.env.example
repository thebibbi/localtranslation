# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=info

# ML Models
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=mps  # Use Metal Performance Shaders on Apple Silicon
WHISPER_COMPUTE_TYPE=float16  # Better performance on GPU

# Speaker Diarization (optional)
# Get a token from https://huggingface.co/pyannote/speaker-diarization-3.1
# You need to accept the model terms first
PYANNOTE_AUTH_TOKEN=

# Storage
UPLOAD_DIR=./storage/uploads
PROCESSED_DIR=./storage/processed
CACHE_DIR=./storage/cache
MAX_UPLOAD_SIZE=500

# Database
DATABASE_URL=sqlite:///./storage/jobs.db

# Job Queue (optional)
REDIS_URL=redis://localhost:6379
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# API
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["tauri://localhost", "http://localhost:1420"]

# Features
ENABLE_TRANSLATION=false
ENABLE_DIARIZATION=false
MAX_CONCURRENT_JOBS=3
